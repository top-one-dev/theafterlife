<!DOCTYPE html>
<html>
  <head>
    <title>AfterLife</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'members', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'members', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">AfterLife</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", members_root_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_member ? current_member.email : "example@example.com" %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "My profile", members_root_path %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_member_session_path, :method => :delete %>
                </li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <% if notice.present? %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert.present? %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
