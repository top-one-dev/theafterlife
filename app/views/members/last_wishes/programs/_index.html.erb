<%= form_for [:members, :last_wishes, @program], :remote => true, :format => :js do |f| %>
  <div class="form-group">
    <%= f.label :design, 'Describe my design preferences for my program' %>
    <%= f.text_area :design, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :text_on_cover, 'Do I want an epitaph or some type of headline tex to be included on the cover of my program?' %>
    <%= f.text_area :text_on_cover, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :words_i_want_to_included, 'Are there any specific words or details I would like included in the body of my program?' %>
    <%= f.text_area :words_i_want_to_included, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes, 'Notes' %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
  <div class="text-right">
    <%= f.submit 'Save', :class => 'btn btn-success' %>
  </div>
<% end %>