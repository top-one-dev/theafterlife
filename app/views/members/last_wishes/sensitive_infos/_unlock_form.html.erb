<%= form_tag members_last_wishes_sensitive_info_unlock_path, :remote => true do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Unlock Sensitive Info</h4>
</div>
<div class="modal-body">
  <div class="form-group">
    <%= label_tag :encryption_key, "Your instruction decryption password" %>
    <%= password_field_tag :encryption_key, nil, :class=>'form-control', :required => true %>
  </div>
</div>
<div class="modal-footer">
  <%= submit_tag 'Unlock', :class => 'btn btn-success' %>
</div>
<% end %>