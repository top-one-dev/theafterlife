<%= form_for [:members, :last_wishes, @sensitive_info], :remote => true do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">New Sensitive Info</h4>
</div>
<div class="modal-body">
  <div class="form-group">
    <%= f.label :info_type, "Info Type" %>
    <%= f.text_field :info_type, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :instruction %>
    <%= f.text_area :instruction, :class => 'form-control', :value => nil, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag :encryption_key, "Your instruction encryption password" %>
    <%= password_field_tag :encryption_key, nil, :class=>'form-control', :required => true %>
    <p>Your data will be encrypted with the password you provide. Please store it safely, if you lose it, you won't be able to access your instruction later on.</p>
  </div>
  <%= f.hidden_field :encrypted_instruction_iv %>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit :class => 'btn btn-success' %>
</div>
<% end %>