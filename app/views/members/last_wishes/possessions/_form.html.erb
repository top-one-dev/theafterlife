<%= form_for [:members, :last_wishes, @possession], :remote => true do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">New Possession</h4>
</div>
<div class="modal-body">
  <div class="form-group">
    <%= f.label :what, 'Possession Name' %>
    <%= f.text_field :what, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :who, 'Person to Receive Possession' %>
    <%= f.text_field :who, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes, 'Notes' %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit :class => 'btn btn-success' %>
</div>
<% end %>