<dl class="dl-horizontal">
  <dt>Donate my body</dt>
  <dd><%= @science_donation.enabled ? "Yes" : "No" %></dd>

  <dt>Organization name</dt>
  <dd>
    <% if @science_donation.organization_name.blank? %>
      <em class="text-small">empty</em>
    <% else %>
      <%= @science_donation.organization_name %>
    <% end %>
  </dd>

  <dt>Address</dt>
  <dd>
    <% if @science_donation.address.blank? %>
      <em class="text-small">empty</em>
    <% else %>
      <%= @science_donation.address %>
    <% end %>
  </dd>

  <dt>Notes</dt>
  <dd>
    <% if @science_donation.notes.blank? %>
      <em class="text-small">empty</em>
    <% else %>
      <%= @science_donation.notes %>
    <% end %>
  </dd>
</dl>

<%= link_to "Edit My Science Donation", edit_members_last_wishes_science_donation_path, :remote => true, :class => "btn btn-success" %>