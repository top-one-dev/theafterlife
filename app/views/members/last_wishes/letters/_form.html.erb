<%= form_for [:members, :last_wishes, @letter], :remote => true do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">New Letter</h4>
</div>
<div class="modal-body">
  <div class="form-group">
    <%= f.label :date_of_creation, "Date Authored" %>
    <%= f.date_field :date_of_creation, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :addressee, "Addressee" %>
    <%= f.text_field :addressee, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :text, "Letter Content" %>
    <%= f.text_area :text, :class => 'form-control' %>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit :class => 'btn btn-success' %>
</div>
<% end %>