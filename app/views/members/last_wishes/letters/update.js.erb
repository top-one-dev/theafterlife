<% if @error.present? %>
  $.growl.error({ title: 'Error!', message: "<%= j @error %>" });
<% else %>
  $.growl.notice({ title: 'Success!', message: "Letter has been updated" });
  $('#modal').modal('hide');
  $('#modal').on('hidden.bs.modal', function (e) {
    $('#letters_panel .panel-body').html('<%= j render :partial =>"index" %>');
  })
<% end %>