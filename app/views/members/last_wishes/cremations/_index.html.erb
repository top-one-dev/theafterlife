<%= form_for [:members, :last_wishes, @cremation], :remote => true, :format => :js do |f| %>
  <div class="form-group">
    <%= f.label nil, "Do I want to have my body cremated?" %>
    <div>
      <label class="radio-inline"><%= f.radio_button :enabled, true %> Yes</label>
      <label class="radio-inline"><%= f.radio_button :enabled, false %> No</label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ashes_disposition, "Wish for Ashes" %>
    <%= f.text_field :ashes_disposition, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
  <div class="text-right">
    <%= f.submit 'Save', :class => 'btn btn-success' %>
  </div>
<% end %>