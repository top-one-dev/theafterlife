<%= form_for [:members, :last_wishes, @visitation], :remote => true, :format => :js do |f| %>
  <div class="form-group">
    <%= f.label nil, "Do I want a visitation?" %>
    <div>
      <label class="radio-inline"><%= f.radio_button :enabled, true %> Yes</label>
      <label class="radio-inline"><%= f.radio_button :enabled, false %> No</label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :public, "If yes, should my visitation be public?" %>
    <%= f.select :public, options_for_select([ "Yes, public", "No, private"]), {}, :class=>"form-control" %>
  </div>
  <%= f.fields_for :address, @visitation.address do |af| %>
  <div class="form-group">
    <%= af.label :name, "Visitation Location" %>
    <%= af.text_field :name, :class => 'form-control' %>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
  <div class="text-right">
    <%= f.submit 'Save', :class => 'btn btn-success' %>
  </div>
<% end %>