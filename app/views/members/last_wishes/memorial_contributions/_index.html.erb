<%= form_for [:members, :last_wishes, @memorial_contribution], :remote => true, :format => :js do |f| %>
  <div class="form-group">
    <%= f.label nil, "Would I like people to make memorial contributions in my memory?" %>
    <div>
      <label class="radio-inline"><%= f.radio_button :enabled, true %> Yes</label>
      <label class="radio-inline"><%= f.radio_button :enabled, false %> No</label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sent_to, 'I would like memorial contributions sent to these organizations or groups' %>
    <%= f.text_area :sent_to, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes, 'Notes' %>
    <%= f.text_area :notes, :class => 'form-control' %>
  </div>
  <div class="text-right">
    <%= f.submit 'Save', :class => 'btn btn-success' %>
  </div>
<% end %>