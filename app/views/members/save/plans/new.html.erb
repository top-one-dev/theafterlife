<div class="panel panel-success">
  <div class="panel-heading">
    New recurring deposit
  </div>
  <div class="panel-body">
  <%= form_for(@plan, :url => members_save_plans_path) do |f| %>
    <div class="form-group">
      <%= f.label :amount %>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field :amount, :class => 'form-control', :step => '0.01', :min => '1' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :interval %><br/>
      <%= f.select :interval, options_for_select(['month', 'quarter', 'year'], 'month'), :class => 'form-control' %>
    </div>

    <%= f.submit 'Create Deposit', :class => 'btn btn-success' %>
  <% end %>
  </div>
</div>