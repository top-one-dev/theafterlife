<div class="panel panel-success">
  <div class="panel-heading">
    New one time deposit
  </div>
  <div class="panel-body">
  <%= form_for(@deposit, :url => members_save_deposits_path) do |f| %>
    <div class="form-group">
      <%= f.label :amount %>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field :amount, :class => 'form-control', :step => '0.01', :min => '1' %>
      </div>
    </div>
    <%= f.submit 'Create Deposit', :class => 'btn btn-success' %>
  <% end %>
  </div>
</div>