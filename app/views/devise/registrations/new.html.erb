<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', placeholder: "Password (#{@minimum_password_length} characters minimum)", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password confirmation', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>    
    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end %>
<br/>
<%= link_to "Forgot your password?", new_password_path(resource_name) %>
<hr/>
<%= link_to "Sign up with Facebook", omniauth_authorize_path(resource_name, :facebook), class: 'btn btn-block btn-primary' %>
<%= link_to "Sign up with Google Plus", omniauth_authorize_path(resource_name, :google_oauth2), class: 'btn btn-block btn-danger' %>
