<div class="login-form">
  <div class="text-center">
    <%= image_tag 'logo-white.png', class: "img-responsive" %>
  </div>
  <br/>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-group ">
      <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
      <%= f.email_field :email, autofocus: true, placeholder: 'Enter your Email', class: 'form-control' %>
    </div>

    <div class="input-group">
      <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
      <%= f.password_field :password, autocomplete: 'off', placeholder: 'Enter your Password', class: 'form-control' %>  
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label class="remember">
          <%= f.check_box :remember_me %> Remember Me
        </label>
      </div>
    <% end -%>

    <div class="input-group">
      <%= f.submit "Log in", class: 'btn login-button' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn login-button' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, :facebook), class: 'btn btn-block btn-primary' %>
    <%= link_to "Sign in with Google Plus", omniauth_authorize_path(resource_name, :google_oauth2), class: 'btn btn-block btn-danger' %>
  </div>
</div>